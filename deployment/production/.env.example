# PostgreSQL Configuration - Main Application Database
POSTGRES_MAIN_USER=ccpg_main
POSTGRES_MAIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MAIN
POSTGRES_MAIN_DB=classics_chain

# PostgreSQL Configuration - Kratos Database
POSTGRES_KRATOS_USER=ccpg_kratos
POSTGRES_KRATOS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_KRATOS
POSTGRES_KRATOS_DB=kratos

# PostgreSQL Configuration - Hydra Database
POSTGRES_HYDRA_USER=ccpg_hydra
POSTGRES_HYDRA_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HYDRA
POSTGRES_HYDRA_DB=hydra

# Kratos Configuration
KRATOS_PUBLIC_BASE_URL=https://auth.classicschain.com
KRATOS_LOG_LEVEL=info
KRATOS_TOTP_ISSUER=ClassicsChain
KRATOS_SECRET_COOKIE=CHANGE_ME_32_CHAR_RANDOM_STRING
KRATOS_SECRET_CIPHER=CHANGE_ME_32_CHAR_RANDOM_STRING
KRATOS_SMTP_CONNECTION_URI=smtps://user:password@smtp.example.com:587/?skip_ssl_verify=false

# Hydra Configuration
HYDRA_PUBLIC_URL=https://oauth.classicschain.com
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_LOG_LEVEL=info
HYDRA_SECRETS_SYSTEM=CHANGE_ME_32_CHAR_RANDOM_STRING

# Garage (S3) Configuration
GARAGE_RPC_SECRET=CHANGE_ME_64_CHAR_HEX_STRING
GARAGE_REGION=garage
GARAGE_ROOT_DOMAIN=classicschain.com
GARAGE_ADMIN_TOKEN=CHANGE_ME_LONG_RANDOM_STRING
GARAGE_METRICS_TOKEN=CHANGE_ME_LONG_RANDOM_STRING
GARAGE_ACCESS_KEY=CHANGE_ME_ACCESS_KEY
GARAGE_SECRET_KEY=CHANGE_ME_SECRET_KEY
GARAGE_BUCKET=vehicle-photos

# Backend Configuration
BACKEND_IMAGE=ghcr.io/YOUR_GITHUB_USERNAME/classicschain/backend
BACKEND_IMAGE_TAG=latest

# Backend Algorand Configuration
ALGORAND_ALGOD_URL=https://testnet-algod.algonode.cloud
ALGORAND_INDEXER_URL=https://testnet-idx.algonode.cloud
ALGORAND_WALLET_MNEMONIC=your-25-word-mnemonic-seed-phrase-here
ALGORAND_NETWORK=testnet

# Backend CORS Configuration
CORS_ALLOWED_ORIGINS=https://classicschain.com,https://admin.classicschain.com

# Backend Admin Seeding Configuration
SEED_ADMIN_EMAIL=admin@classicschain.com
SEED_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Domain Configuration
DOMAIN=classicschain.com
ADMIN_DOMAIN=admin.classicschain.com
API_DOMAIN=api.classicschain.com
AUTH_DOMAIN=auth.classicschain.com
STORAGE_DOMAIN=storage.classicschain.com

# Application URLs (for Kratos config)
WEB_APP_URL=https://classicschain.com
ADMIN_APP_URL=https://admin.classicschain.com

# Static file paths on VM
WEB_APP_PATH=/opt/classicschain/web
ADMIN_APP_PATH=/opt/classicschain/admin

# Caddy Configuration
ADMIN_EMAIL=admin@classicschain.com

# Basic Authentication Configuration
# Protects: Main web app (classicschain.com) and Admin app (admin.classicschain.com)
# Generate hash with: docker run --rm caddy:latest caddy hash-password --plaintext 'your-password'
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD_HASH=CHANGE_ME_BCRYPT_HASH
